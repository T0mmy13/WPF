<Page x:Class="WPF_Proj.Pages.PageRegistration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Proj.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <StackPanel Style="{StaticResource RegistrStack}">
            <Label Content="Регистрация " Style="{StaticResource H1}"/>
            <Label Content="Имя" Style="{StaticResource H2}"/>
            <TextBox Text="{Binding Name}"/>
            <Label Content="Фамилия" Style="{StaticResource H2}"/>
            <TextBox Text="{Binding LastName}"/>
            <Label Content="Отчество" Style="{StaticResource H2}"/>
            <TextBox Text="{Binding MiddleName}"/>
            <Label Content="Специализация" Style="{StaticResource H2}"/>
            <TextBox Text="{Binding Specialization}"/>
            <Label Content="Пароль" Style="{StaticResource H2}"/>
            <TextBox Text="{Binding Password}"/>
            <Button Click="Button_Click_Reg">
                <Label Content="Зарегистрироваться" Style="{StaticResource H2}"/>
            </Button>
            <Button Click="Button_Click_Back">
                <Label Content="Назад" Style="{StaticResource H2}"/>
            </Button>
        </StackPanel>
    </Grid>
</Page>

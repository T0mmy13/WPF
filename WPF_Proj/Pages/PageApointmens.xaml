<Page x:Class="WPF_Proj.Pages.PageApointmens"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Proj.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2.6*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="0.7*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Style="{StaticResource StackInGrid}">
            <Label Style="{StaticResource H3}" Content="ФИО"/>
            <Label Style="{StaticResource H3}" Content="Дата рождения"/>
            <Label Style="{StaticResource H3}" Content="Возраст"/>
            <Label Style="{StaticResource H3}" Content="Совершеннолетний/Несовершеннолетний"/>
            <Label Style="{StaticResource H3}" Content="Номер"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Style="{StaticResource StackInGrid}">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Style="{StaticResource StackInGrid}">
                    <Label Style="{StaticResource H3}" Content="Диагноз"/>
                    <TextBox/>
                </StackPanel>
                <StackPanel DockPanel.Dock="Top" Style="{StaticResource StackInGrid}">
                    <Label Style="{StaticResource H3}" Content="Рекомендации"/>
                    <TextBox Style="{StaticResource BigTextbox}"/>
                </StackPanel>                
            </DockPanel>
            <Button>
                <Label Content="Сохранить" Style="{StaticResource H2}"/>
            </Button>
        </StackPanel>
        <StackPanel Grid.Row="2" Style="{StaticResource StackInGrid}">
            <Label Content="История приёмов" Style="{StaticResource H2}"/>
            <ListBox>
                <StackPanel Style="{StaticResource StackInGrid}">
                    <Label Style="{StaticResource H3}" Content="Дата"/>
                    <Label Style="{StaticResource H3}" Content="Врач"/>
                    <Label Style="{StaticResource H3}" Content="Диагноз"/>
                </StackPanel>
            </ListBox>
        </StackPanel>
        <StackPanel Grid.Row="3" Style="{StaticResource StackInGrid}">
            <Button Click="Button_Click_Back">
                <Label Content="Назад" Style="{StaticResource H2}"/>
            </Button>
        </StackPanel>
    </Grid>
</Page>

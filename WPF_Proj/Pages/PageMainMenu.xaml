<Page x:Class="WPF_Proj.Pages.PageMainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Proj.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="0.6*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Style="{StaticResource StackInGrid}">
            <Label Content="ФИО" Style="{StaticResource H3}"/>
            <Label Content="Специализация: 1" Style="{StaticResource H3}"/>
        </StackPanel>
        <DockPanel Grid.Row="1">
            <Button Style="{StaticResource AddButton}" Content="+" Click="Button_Click"/>
            <Button Click="Button_Click_StartApointment">
                <Label Style="{StaticResource H2}" Content="Начать приём"/>
            </Button>
            <Button Click="Button_Click_ChangeInfo">
                <Label Style="{StaticResource H2}" Content="Изменить инфо"/>
            </Button>
        </DockPanel>
        <ListBox Grid.Row="2">
            <StackPanel Style="{StaticResource StackInGrid}">
                <Label Style="{StaticResource H3}" Content="ФИО"/>
                <Label Style="{StaticResource H3}" Content="Дата рождения"/>
                <Label Style="{StaticResource H3}" Content="Возраст"/>
                <Label Style="{StaticResource H3}" Content="Совершеннолетний/Несовершеннолетний"/>
                <Label Style="{StaticResource H3}" Content="Номер"/>
            </StackPanel>
        </ListBox>
        <StackPanel Style="{StaticResource StackInGrid}" Grid.Row="3">
            <Label Style="{StaticResource H3}" Content="Всего пациентов:"/>
        </StackPanel>
    </Grid>
</Page>

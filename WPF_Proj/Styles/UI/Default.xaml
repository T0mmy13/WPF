<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ОБЩИЕ СТИЛИ -->
    <Style TargetType="Frame">
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="NavigationUIVisibility" Value="Hidden"/>
        <Setter Property="Background" Value="{DynamicResource WindowBackground}"/>
    </Style>

    <Style TargetType="Page">
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Background" Value="{DynamicResource WindowBackground}"/>
    </Style>

    <!-- Объекты -->
    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="Tahoma"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Foreground" Value="{DynamicResource FontColor}"/>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Height" Value="30"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource FontColor}"/>
    </Style>

    <Style TargetType="PasswordBox">
        <Setter Property="Height" Value="30"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource FontColor}"/>
    </Style>

    <Style TargetType="DatePicker">
        <Setter Property="Height" Value="35"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource FontColor}"/>
    </Style>

    <!-- Контейнеры -->
    <Style TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
    </Style>

    <Style TargetType="DockPanel">
        <Setter Property="LastChildFill" Value="False"/>
        <Setter Property="Background" Value="{DynamicResource WindowBackground}"/>
    </Style>

    <Style TargetType="ListBox">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Width" Value="2000"/>
        <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource FontColor}"/>
    </Style>

    <!-- ИМЕННЫЕ -->
    <Style TargetType="Label" x:Key="H1" BasedOn="{StaticResource {x:Type Label}}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Foreground" Value="{DynamicResource FontColor}"/>
    </Style>

    <Style TargetType="Label" x:Key="H2" BasedOn="{StaticResource {x:Type Label}}">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource FontColor}"/>
    </Style>

    <Style TargetType="Label" x:Key="H3" BasedOn="{StaticResource {x:Type Label}}">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="0.2"/>
        <Setter Property="Foreground" Value="{DynamicResource FontColor}"/>
    </Style>

    <!-- TextBoxes -->
    <Style TargetType="TextBox" x:Key="BigTextbox" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Width" Value="300"/>
        <Setter Property="Height" Value="70"/>
        <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource FontColor}"/>
    </Style>

    <!-- StackPanels -->
    <Style TargetType="StackPanel" x:Key="LoginStack" BasedOn="{StaticResource {x:Type StackPanel}}">
        <Setter Property="Width" Value="400"/>
        <Setter Property="Height" Value="350"/>
        <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
    </Style>

    <Style TargetType="StackPanel" x:Key="RegistrStack" BasedOn="{StaticResource {x:Type StackPanel}}">
        <Setter Property="Width" Value="400"/>
        <Setter Property="Height" Value="560"/>
        <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
    </Style>

    <Style TargetType="StackPanel" x:Key="StackInGrid" BasedOn="{StaticResource {x:Type StackPanel}}">
        <Setter Property="Width" Value="auto"/>
        <Setter Property="Height" Value="auto"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style TargetType="StackPanel" x:Key="AddPatientStack" BasedOn="{StaticResource {x:Type StackPanel}}">
        <Setter Property="Width" Value="400"/>
        <Setter Property="Height" Value="650"/>
        <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
    </Style>

    <!-- Menu -->
    <Style TargetType="Menu">
        <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource FontColor}"/>
        <Setter Property="Height" Value="25"/>
    </Style>

    <Style TargetType="MenuItem">
        <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource FontColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource ButtonHover}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Элементы интерфейса -->
    <Style TargetType="Border" x:Key="PatientItemBorder">
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>

    <Style TargetType="StackPanel" x:Key="HorizontalStackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
    </Style>

    <Style TargetType="Label" x:Key="H3Bold" BasedOn="{StaticResource H3}">
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style TargetType="ItemsControl" x:Key="ValidationErrorItems">
        <Setter Property="Foreground" Value="Red"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Margin" Value="5,2,0,0"/>
    </Style>

</ResourceDictionary>
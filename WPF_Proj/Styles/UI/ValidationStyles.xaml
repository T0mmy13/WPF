<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Стиль для TextBox с валидацией БЕЗ ErrorTemplate -->
    <Style x:Key="ValidatedTextBox" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
        <!-- Убираем ErrorTemplate полностью -->
    </Style>

    <!-- Стиль для DatePicker с валидацией БЕЗ ErrorTemplate -->
    <Style x:Key="ValidatedDatePicker" TargetType="DatePicker" BasedOn="{StaticResource {x:Type DatePicker}}">
        <!-- Убираем ErrorTemplate полностью -->
    </Style>

    <!-- Стиль для PasswordBox с валидацией БЕЗ ErrorTemplate -->
    <Style x:Key="ValidatedPasswordBox" TargetType="PasswordBox" BasedOn="{StaticResource {x:Type PasswordBox}}">
        <!-- Убираем ErrorTemplate полностью -->
    </Style>

</ResourceDictionary>
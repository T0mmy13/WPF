<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="FontColor" Color="White"/>
    <SolidColorBrush x:Key="WindowBackground" Color="#2D2D30"/>
    <SolidColorBrush x:Key="ControlBackground" Color="#3E3E42"/>

    <!-- Цвета кнопок -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#007ACC"/>
    <SolidColorBrush x:Key="ButtonHover" Color="#005A9E"/>
    <SolidColorBrush x:Key="ButtonPressed" Color="#004578"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="White"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="#005A9E"/>

    <!-- Цвета кнопки добавления -->
    <SolidColorBrush x:Key="AddButtonBackground" Color="#28A745"/>
    <SolidColorBrush x:Key="AddButtonHover" Color="#218838"/>
    <SolidColorBrush x:Key="AddButtonPressed" Color="#1E7E34"/>

    <!-- Цвета кнопки удаления -->
    <SolidColorBrush x:Key="DeleteButtonBackground" Color="#DC3545"/>
    <SolidColorBrush x:Key="DeleteButtonHover" Color="#C82333"/>
    <SolidColorBrush x:Key="DeleteButtonPressed" Color="#BD2130"/>
</ResourceDictionary>
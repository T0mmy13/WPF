<Window x:Class="WPF_Proj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="800" Width="1200"
        Background="{DynamicResource WindowBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- МЕНЮ -->
        <Menu Grid.Row="0" Grid.ColumnSpan="2" Height="25">
            <MenuItem Header="Настройки">
                <MenuItem Header="Сменить тему" Click="ChangeTheme_Click"/>
            </MenuItem>
        </Menu>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1" Grid.ColumnSpan="2"/>
    </Grid>
</Window>